@using VINMediaCaptureEntities.Entities
@using VINMediaCaptureEntities.Enum
@using VINMediaCaptureEntities.ViewModel
@{
    var colors = (List<Color>)ViewBag.Color;
    var markets = (List<Market>)ViewBag.Market;
    var models = (List<Model>)ViewBag.Model;
}
@model DocTypeItems
<form action="@Url.Action("Create","DocTypeItems")" method="post" id="frmForm">
    <input type="hidden" class="form-control col-md-8" id="ColorId" name="ColorId" required placeholder="Tên Màu" value="@Model.DocTypeID">
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>@(Model.ColorID <= 0 ? "Thêm mới" : "Cập nhật") thuộc tính thông tin cần thu thập</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
            <div class="container-fluid">
                @{
                    if (ViewBag.ErrorMsg != null)
                    {
                        <div class="col-md-12 bg-danger">
                            <div class="inner">
                                <h3>Lỗi</h3>
                                <p>@ViewBag.ErrorMsg</p>
                            </div>
                        </div>
                    }
                }
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-info">
                            <div class="card-header">
                                <h3 class="card-title">Thông tin thuộc tính cần thu thập</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Tên thuộc tính</label>
                                            <input type="text" class="form-control col-md-8" id="ItemName" name="ItemName" required placeholder="Tên thuộc tính" value="@Model.ItemName">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Mô tả thuộc tính</label>
                                            <input type="text" class="form-control col-md-8" id="ItemDescription" name="ItemDescription" required placeholder="Mô tả thuộc tính" value="@Model.ItemDescription">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 row">
                                        <div class="form-group row col-md-6">
                                            <input type="checkbox" id="isMandatory" name="isMandatory" value="@Model.isMandatory">
                                            <label>Thuộc tính bắt buộc</label>
                                        </div>
                                        <div class="form-group row col-md-6">
                                            <input type="checkbox" id="ManualCollect" name="ManualCollect" value="@Model.ManualCollect">
                                            <label>Thuộc tính thủ công</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Model</label>
                                            <select class="form-control col-md-8" id="ModelID" name="ModelID">
                                                <option value="-1">-- Chọn --</option>
                                                @{
                                                    foreach (var item in models)
                                                    {
                                                        <option value="@item.ModelID">@item.ModelName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Thị trường</label>
                                            <select class="form-control col-md-8" id="MarketId" name="MarketId">
                                                <option value="-1">-- Chọn --</option>
                                                @{
                                                    foreach (var item in markets)
                                                    {
                                                        <option value="@item.MarketID">@item.MarketCode - @item.MarketName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Màu sắc</label>
                                            <select class="form-control col-md-8" id="ColorID" name="ColorID">
                                                <option value="-1">-- Chọn --</option>
                                                @{
                                                    foreach (var item in colors)
                                                    {
                                                        <option value="@item.ColorID">@item.ColorCode - @item.ColorName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Trạng thái</label>
                                            <select class="form-control col-md-8" id="cboDisable" name="Disable">
                                                @{
                                                    if (Model.Disabled == (int)EStatus.Active)
                                                    {
                                                        <option value="@((int)EStatus.Active)" selected="selected">@(EStatus.Active.GetDescription())</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@((int)EStatus.Active)">@(EStatus.Active.GetDescription())</option>
                                                    }
                                                    if (Model.Disabled == (int)EStatus.InActive)
                                                    {
                                                        <option value="@((int)EStatus.InActive)" selected="selected">@(EStatus.InActive.GetDescription())</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@((int)EStatus.InActive)">@(EStatus.InActive.GetDescription())</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row">
                                            <label class="col-md-4">Thứ tự</label>
                                            <input type="text" class="form-control col-md-8" id="DisplayIDX" name="DisplayIDX" placeholder="Thứ tự hiển thị" value="@Model.DisplayIDX">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <button class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> &nbsp; Lưu</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</form>
<script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/js/customvalidate.js"></script>
<script src="~/js/DocTypeItems/create.js"></script>